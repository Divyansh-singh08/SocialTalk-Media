<h1 style="clear: right">User Profile Page</h1>

<!-- user is store in the locals storage -->
<p>
  <% if(user.id == profile_user.id){%>
    <!-- if user matches  then show the form   -->
    <!-- <form action="/users/update/<%=profile_user.id%>" method="POST"> -->
    <!-- i want user can update the email and name -->
    <!-- <input type="text" name="name" placeholder="Your Name " value="<%=profile_user.name %>" required> -->
    <!-- <input type="email" name="email" placeholder="Your Email " value="<%=profile_user.email %>" required> -->
    <!-- <input type="submit" name="" value="Update"> -->
    <!-- </form> -->
    <!-- now we need to create route and controller for submit this -->
    
    <!-- Now we are setting multer so we did in the same form with the help of this -->
    <!-- we can upload file with enctype manner which is safe -->
    
    <form
      action="/users/update/<%=profile_user.id%>"
      enctype="multipart/form-data"
      method="POST"
    >
      <!-- i want user can update the email and name -->
      <input
        type="text"
        name="name"
        placeholder="Your Name "
        value="<%=profile_user.name %>"
        required
      />
      <input
        type="email"
        name="email"
        placeholder="Your Email "
        value="<%=profile_user.email %>"
        required
      />
      <!-- uploading the profile using multer so we need to set into the models/user.js -->
      <input type="file" name="avatar" placeholder="profile Picture" />
    
      <input type="submit" name="" value="Update" />
    </form>
    
    <%}else{%>
    <!-- else only show the profile information -->

    <p>
      <abbr title="<%=profile_user.name%>">
        <img   src="<%=profile_user.avatar%>" alt="<%=profile_user.name%>" width="100px">
      </abbr>
      <br>
      <br>
      <span>
        <%=profile_user.name%>
      </span>
    </p>
    <p>
      <span>
        <%= profile_user.email%>
      </span>
    </p>
    <!-- <p><%= profile_user.name%></p> -->
    
    
    <%}%>
</p>


